@model CourseDepartment_ViewModel
@{
	SelectList deptList = new SelectList(Model.AllDepartments, "Id", "Name");
}
<form asp-controller="Course" asp-action="Edit" method="post">
  <div asp-validation-summary= "All" ></div>
  <div class="hidden-group">
    <input type="hidden" class="form-control" name="Id" id="Id" value="@Model.Id">
  </div>
  <div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control">
    <span asp-validation-for= "Name" class= "text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Degree"></label>
    <input asp-for="Degree" class="form-control">
    <span asp-validation-for= "Degree" class= "text-danger"></span>

  </div>

  <div class="form-group">
    <label asp-for="MinimumDegree"></label>
    <input asp-for="MinimumDegree" class="form-control">
    <span asp-validation-for= "MinimumDegree" class= "text-danger"></span>

  </div>

  <div class="form-group">
    <label>Department</label>
    <select asp-items="deptList" asp-for="DepartmentId" class="form-control">
        <option value="0">  ---Select Course Department---  </option>
    </select>
    <span asp-validation-for= "DepartmentId" class= "text-danger"></span>
    </div>
    
  <button type="submit" class="btn btn-success">Create</button>
</form>

@section Scripts{
  <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
  <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}